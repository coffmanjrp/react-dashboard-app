{
  "short_name": "Welcome Tab",
  "name": "Simple Welcome Tab",
  "description": "It's a simple welcome tab",
  "author": "coffmanjrp",
  "manifest_version": 3,
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["tabs"],
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
